<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="https://www.adobe.com/go/aem_cmp_text_v2"
    trackingFeature="core-components:text:v2">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <properties
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Properties"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        granite:class="cq-RichText-FixedColumn-column"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                name="./text"
                                                useFixedInlineToolbar="{Boolean}true">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <format
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <justify
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <links
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>                                                   
                                                    <lists
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <misctools
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <specialCharsConfig jcr:primaryType="nt:unstructured">
                                                            <chars jcr:primaryType="nt:unstructured">
                                                                <default_copyright
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;copy;"
                                                                    name="copyright"/>
                                                                <default_euro
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;euro;"
                                                                    name="euro"/>
                                                                <default_registered
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;reg;"
                                                                    name="registered"/>
                                                                <default_trademark
                                                                    jcr:primaryType="nt:unstructured"
                                                                    entity="&amp;trade;"
                                                                    name="trademark"/>
																<default_infinity
																	jcr:primaryType="nt:unstructured"
																	entity="&amp;infin;"
																	name="infinity"/>
                                                            </chars>
                                                        </specialCharsConfig>
                                                    </misctools>
                                                    <paraformat
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <formats jcr:primaryType="nt:unstructured">
                                                            <default_p
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Paragraph"
                                                                tag="p"/>
                                                            <default_h1
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 1"
                                                                tag="h1"/>
                                                            <default_h2
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 2"
                                                                tag="h2"/>
                                                            <default_h3
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 3"
                                                                tag="h3"/>
                                                            <default_h4
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 4"
                                                                tag="h4"/>
                                                            <default_h5
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 5"
                                                                tag="h5"/>
                                                            <default_h6
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Heading 6"
                                                                tag="h6"/>
                                                            <default_blockquote
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Quote"
                                                                tag="blockquote"/>
                                                            <default_hr
                                                                jcr:primaryType="nt:unstructured"
                                                                description="Horizontal Rule (visual line break)"
                                                                tag="hr"/>
                                                        </formats>
                                                    </paraformat>
                                                    <tracklinks
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>                                                    
                                                    <subsuperscript
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <spellcheck
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <undo
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*"/>
                                                    <styles
                                                        jcr:primaryType="nt:unstructured"
                                                        features="*">
                                                        <styles jcr:primaryType="nt:unstructured">
                                                            <buttondisabled
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-button--disabled"
                                                                text="Button Disabled"/>
                                                            <buttonprimary
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-button--primary"
                                                                text="Button Primary"/>
                                                            <buttonpromo
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-button--promo"
                                                                text="Button Promo"/>
                                                            <buttonsecondary
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-button--secondary"
                                                                text="Button Secondary"/>
															<buttontransparent
																jcr:primaryType="nt:unstructured"
																cssName="cmp-button--transparent"
																text="Button Transparent"/>
                                                            <configuratorheader
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="configurator-header"
                                                                text="Configurator Header"/>
															<copyrightyear
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="footer-copyright-year"
                                                                text="Copyright Year"/>
                                                            <fullwidthbutton
																jcr:primaryType="nt:unstructured"
																cssName="cmp-button--width_100"
																text="Secondary Button Full Width"/>
                                                            <fontxsmall
																jcr:primaryType="nt:unstructured"
																cssName="font-size--12"
																text="Font 12"/>
															<fontsmall
																jcr:primaryType="nt:unstructured"
																cssName="font-size--14"
																text="Font 14"/>
															<fontmedium
																jcr:primaryType="nt:unstructured"
																cssName="font-size--16"
																text="Font 16"/>
															<fontbig
																jcr:primaryType="nt:unstructured"
																cssName="font-size--20"
																text="Font 20"/>
                                                            <fontcolorblack
																jcr:primaryType="nt:unstructured"
																cssName="text--black"
																text="Font Color Black"/>
															<fontcolorgray
																jcr:primaryType="nt:unstructured"
																cssName="text--gray"
																text="Font Color Gray"/>
															<fontcolorgreen
																jcr:primaryType="nt:unstructured"
																cssName="text--green"
																text="Font Color Green"/>
															<fontcolorlightgrey
																jcr:primaryType="nt:unstructured"
																cssName="text--light_grey"
																text="Font Color Light Grey"/>
															<fontcolorlightsand
																jcr:primaryType="nt:unstructured"
																cssName="text--light_sand"
																text="Font Color Light Sand"/>
															<fontcolormediumgrey
																jcr:primaryType="nt:unstructured"
																cssName="text--medium_grey "
																text="Font Color Medium Grey"/>
															<fontcolororange
																jcr:primaryType="nt:unstructured"
																cssName="text--orange"
																text="Font Color Orange"/>
															<fontcolororangetag
																jcr:primaryType="nt:unstructured"
																cssName="text--orange_tag"
																text="Font Color Orange Tag"/>
															<fontcolorrederror
																jcr:primaryType="nt:unstructured"
																cssName="text--red_error"
																text="Font Color Red Error"/>
															<fontcolortextblack
																jcr:primaryType="nt:unstructured"
																cssName="text--text_black "
																text="Font Color Text Black"/>
															<fontcolorwhite
																jcr:primaryType="nt:unstructured"
																cssName="text--white "
																text="Font Color White"/>
															<fontcoloryellowwarning
																jcr:primaryType="nt:unstructured"
																cssName="text--yellow_warning "
																text="Font Color Yellow Warning"/>	
															<header7
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="header-small"
                                                                text="Header 7"/>
                                                            <header8
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="header-xsmall "
                                                                text="Header 8"/>
															<heroheadingbig
																jcr:primaryType="nt:unstructured"
																cssName="hero-heading-big"
																text="Hero Heading Big(54px)"/>
															<heroheadingsmall
																jcr:primaryType="nt:unstructured"
																cssName="hero-heading-small"
																text="Hero Heading Small(32px)"/>
                                                            <linkarrow
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-link__arrow"
                                                                text="Link Arrow"/>
                                                            <whitelinkarrow
																jcr:primaryType="nt:unstructured"
																cssName="cmp-link__arrow cmp-link__arrow--white"
																text="White Link Arrow "/>
															<linkarrowlefticon
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-link__arrow_left"
                                                                text="Link Arrow Left Icon"/>
                                                            <linktext
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-link__text"
                                                                text="Link Text"/>
															<listarrow
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="cmp-text--arrow"
                                                                text="List Style Arrow"/>                                                          
                                                            <number
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="font--number"
                                                                text="Number"/>
                                                            <oldprice
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="old-price"
                                                                text="Old Price"/>
															<oldpricewhite
																jcr:primaryType="nt:unstructured"
																cssName="old-price old-price--white"
																text="Old Price White"/>
															<oldpriceorange
																jcr:primaryType="nt:unstructured"
																cssName="old-price old-price--orange"
																text="Old Price Orange"/>
                                                            <oldpricevalue
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="old-price-value"
                                                                text="Old Price Value"/>
															<bodycopy1
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="body-copy1"
                                                                text="P1"/>
                                                            <bodycopy2
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="body-copy2"
                                                                text="P2"/>
                                                            <bodycopy3
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="body-copy3"
                                                                text="P3"/>
                                                            <bodycopy4
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="body-copy4"
                                                                text="P4"/>
                                                            <secondaryheader1
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="secondary-header1"
                                                                text="Secondary Header 1"/>
                                                            <secondaryheader2
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="secondary-header2"
                                                                text="Secondary Header 2"/>
                                                            <secondaryheader3
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="secondary-header3"
                                                                text="Secondary Header 3"/>
                                                            <secondaryheader4
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="secondary-header4"
                                                                text="Secondary Header 4"/>
															<spacebottom
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="space-bottom"
                                                                text="Space Botttom"/>
															<spaceleft
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="space-left"
                                                                text="Space Left"/>
															<spaceright
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="space-right"
                                                                text="Space Right"/>
															<spacetop
                                                                jcr:primaryType="nt:unstructured"
                                                                cssName="space-top"
                                                                text="Space Top"/>																														
                                                        </styles>
                                                    </styles>
                                                </rtePlugins>
                                                <uiSettings jcr:primaryType="nt:unstructured">
                                                    <cui jcr:primaryType="nt:unstructured">
                                                        <inline
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[format#bold,format#italic,format#underline,#justify,#lists,links#modifylink,links#unlink,misctools#sourceedit,#paraformat,spellcheck#checktext,subsuperscript#subscript,subsuperscript#superscript,undo#undo,undo#redo,links#anchor,misctools#specialchars,#styles]">
                                                            <popovers jcr:primaryType="nt:unstructured">
                                                                <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[justify#justifyleft,justify#justifycenter,justify#justifyright,justify#justifyjustify]"
                                                                    ref="justify"/>
                                                                <lists
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="[lists#unordered,lists#ordered,lists#outdent,lists#indent]"
                                                                    ref="lists"/>
                                                                <paraformat
                                                                    jcr:primaryType="nt:unstructured"
                                                                    items="paraformat:getFormats:paraformat-pulldown"
                                                                    ref="paraformat"/>
                                                            </popovers>
                                                        </inline>
                                                        <tableEditOptions
                                                            jcr:primaryType="nt:unstructured"
                                                            toolbar="[table#insertcolumn-before,table#insertcolumn-after,table#removecolumn,-,table#insertrow-before,table#insertrow-after,table#removerow,-,table#mergecells-right,table#mergecells-down,table#mergecells,table#splitcell-horizontal,table#splitcell-vertical,-,table#selectrow,table#selectcolumn,-,table#ensureparagraph,-,table#modifytableandcell,table#removetable,-,undo#undo,undo#redo,-,table#exitTableEditing,-]"/>
                                                    </cui>
                                                </uiSettings>
                                            </text>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
											<cssclass
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML class attribute to apply to the component."
                                                fieldLabel="CSS class"
                                                name="./cssClass"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </properties>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
