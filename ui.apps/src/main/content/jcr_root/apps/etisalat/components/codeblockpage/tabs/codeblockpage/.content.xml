<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    cq:showOnCreate="{Boolean}false"
    jcr:primaryType="nt:unstructured"
    jcr:title="Code Block"
    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
    <items jcr:primaryType="nt:unstructured">
        <column
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/coral/foundation/container">
            <items jcr:primaryType="nt:unstructured">
                <cssrequirement
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Custom CSS Requirements"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <allowedcss
                            granite:class="foundation-layout-util-maximized-alt"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            fieldDescription="Click 'Add Field' to add a CSS file or a list of CSS files . Each value in the list must be an absolute path to a CSS file or use '/.*' to allow all CSS files below this path."
                            fieldLabel="CSS to be added">
                            <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                name="./customAllowedCss"
                                rootPath="/content/dam/etisalat">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-msm-lockable="customAllowedCss"/>
                            </field>
                        </allowedcss>
                    </items>
                </cssrequirement>
                <jsrequirement
                    jcr:primaryType="nt:unstructured"
                    jcr:title="Custom JS Requirements"
                    sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                        <allowedjs
                            granite:class="foundation-layout-util-maximized-alt"
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                            fieldDescription="Click 'Add Field' to add a JS file or a list of JS files . Each value in the list must be an absolute path to a JS file or use '/.*' to allow all JS files below this path."
                            fieldLabel="JS to be added">
                            <field
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                name="./customAllowedJs"
                                rootPath="/content/dam/etisalat">
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    cq-msm-lockable="customAllowedJs"/>
                            </field>
                        </allowedjs>
                    </items>
                </jsrequirement>
            </items>
        </column>
    </items>
</jcr:root>
